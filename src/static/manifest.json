{
  "manifest_version": 3,
  "version": "1.1.0",
  "name": "Read With Me",
  "description": "To make it easier for you to read, it highlights text and converts it to speech at your own pace.",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "action": {
    "default_title": "Read With Me",
    "default_icon": "images/48.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting"]
}
