{
  "manifest_version": 3,
  "version": "1.1.1",
  "name": "Read With Me",
  "description": "Read With Me is a Chrome extension that helps you read articles on the web by highlighting the text as it reads it out loud. (TTS)",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "action": {
    "default_title": "Read With Me",
    "default_icon": "images/48.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting"]
}
